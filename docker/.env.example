# Easy MCP Environment Configuration

# Application Settings
APP_NAME=Easy MCP
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO
LOG_CONFIG_PATH=api/logging.ini

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
# SQLite (default)
DB_URL=sqlite+aiosqlite:///./easy_mcp.db
# PostgreSQL
# DB_URL=postgresql+asyncpg://username:password@localhost:5432/easy_mcp
DB_ECHO=false

# JWT Authentication
JWT_SECRET_KEY=easy_mcp_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 1 day

# CORS Settings
CORS_ORIGINS=*

# Admin User (created on first startup if not exists)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
ADMIN_EMAIL=admin@example.com

# Tool Execution Settings
TOOL_EXECUTION_TIMEOUT=30  # seconds
TOOL_MAX_MEMORY=512  # MB
